@section Scripts {
    <script>
        $(document).ready(function () {
            $('.variant-selector').change(function () {
                var selectedVariantId = $(this).val();
                var price = $(this).data('price');
                
                if (selectedVariantId) {
                    $('.font-weight-semi-bold.mb-4').first().text('$' + parseFloat(price).toFixed(2));
                    $('#selected-variant-id').val(selectedVariantId);
                }
            });

            // Quantity selector logic
            $('.btn-qty').on('click', function () {
                var button = $(this);
                var input = button.parent().find('input');
                var oldValue = input.val();
                var newVal;
                if (button.hasClass('btn-plus')) {
                    newVal = parseFloat(oldValue) + 1;
                } else {
                    if (oldValue > 1) {
                        newVal = parseFloat(oldValue) - 1;
                    } else {
                        newVal = 1;
                    }
                }
                input.val(newVal).trigger('change');
            });

            $('input[name="quantity"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) {
                    e.preventDefault();
                }
            });

            $('input[name="quantity"]').on('input change', function() {
                var val = $(this).val();
                if (val !== '') {
                    var n = parseInt(val);
                    if (isNaN(n) || n < 1) {
                        $(this).val(1);
                    }
                }
            }).on('blur', function() {
                var val = $(this).val();
                if (val === '' || isNaN(parseInt(val)) || parseInt(val) < 1) {
                    $(this).val(1);
                }
            });

            $('#add-to-cart-form').submit(function (e) {
                var variantId = $('#selected-variant-id').val();
                if (!variantId && @(Model.ViewModel.Variants.Any() ? "true" : "false")) {
                    alert('Vui lòng chọn một phiên bản sản phẩm.');
                    e.preventDefault();
                }
            });

            // Review star rating logic
            function updateStars(rating) {
                $('.rating-star').each(function() {
                    var val = $(this).data('value');
                    if (val <= rating) {
                        $(this).removeClass('far').addClass('fas');
                    } else {
                        $(this).removeClass('fas').addClass('far');
                    }
                });
                $('#review-rating').val(rating);
            }

            // Defaults to 5 stars
            updateStars(5);

            $('.rating-star').click(function() {
                var rating = $(this).data('value');
                updateStars(rating);
            }).hover(function() {
                var rating = $(this).data('value');
                $('.rating-star').each(function() {
                    var val = $(this).data('value');
                    if (val <= rating) {
                        $(this).removeClass('far').addClass('fas');
                    } else {
                        $(this).removeClass('fas').addClass('far');
                    }
                });
            }, function() {
                var currentRating = $('#review-rating').val();
                updateStars(currentRating);
            });

            // Handle TempData success/error
            var successMsg = '@TempData["Success"]';
            var errorMsg = '@TempData["Error"]';
            if (successMsg) showProductToast('success', successMsg);
            if (errorMsg) showProductToast('error', errorMsg);
        });

        function showProductToast(type, message) {
            var bgClass = type === 'success' ? 'bg-success' : type === 'warning' ? 'bg-warning' : type === 'error' ? 'bg-danger' : 'bg-info';
            var iconClass = type === 'success' ? 'fa-check-circle' : type === 'warning' ? 'fa-exclamation-triangle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
            var html = '<div class="toast align-items-center text-white ' + bgClass + ' border-0" role="alert" style="position:fixed;top:20px;right:20px;z-index:9999;"><div class="d-flex"><div class="toast-body"><i class="fas ' + iconClass + ' me-2"></i>' + message + '</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div></div>';
            var div = document.createElement('div');
            div.innerHTML = html;
            document.body.appendChild(div.firstElementChild);
            var toastEl = document.body.querySelector('.toast:last-child');
            var toast = new bootstrap.Toast(toastEl, { delay: 4000 });
            toast.show();
            toastEl.addEventListener('hidden.bs.toast', function () { toastEl.remove(); });
        }

        // Real-time: listen product status changes for this product
        (function () {
            var currentProductId = '@Model.ViewModel.Id';
            var productName = '@Html.Raw(Model.ViewModel.Name)';
            console.log('[Product Detail] Listening for product changes, id:', currentProductId);

            document.addEventListener('rt:product-changed', function (e) {
                var d = e.detail;
                var pid = (d.productId || d.ProductId || '').toString();
                if (pid.toLowerCase() !== currentProductId.toLowerCase()) return;

                console.log('[Product Detail] Product changed:', d);
                var changeType = d.changeType || d.ChangeType || '';
                var status = d.status || d.Status || '';
                var name = d.name || d.Name || 'Sản phẩm';

                if (changeType === 'statusChanged' && (status === 'draft' || status === 'inactive')) {
                    // Product unpublished - show warning and redirect
                    showProductToast('warning', `${name} đã bị gỡ khỏi cửa hàng.`);
                    setTimeout(function () { window.location.href = '/'; }, 2000);
                } else if (changeType === 'rejected') {
                    showProductToast('warning', `${name} đã bị từ chối và không còn khả dụng.`);
                    setTimeout(function () { window.location.href = '/'; }, 2000);
                } else if (changeType === 'updated') {
                    showProductToast('info', `${name} vừa được cập nhật.`);
                    setTimeout(function () { location.reload(); }, 1500);
                } else if (changeType === 'approved') {
                    showProductToast('success', `${name} đã được duyệt!`);
                    setTimeout(function () { location.reload(); }, 1500);
                }
            });

            document.addEventListener('rt:review-approved', function (e) {
                const review = e.detail;
                const productId = (review.productId || review.ProductId || '').toString();
                
                if (productId.toLowerCase() !== currentProductId.toLowerCase()) return;

                console.log('[Product Detail] New review approved:', review);

                // 1. Remove "no reviews" message if it exists
                $('#reviews-list-container p.text-muted').remove();

                // 2. Build review HTML
                let starsHtml = '';
                for (let i = 1; i <= 5; i++) {
                    starsHtml += `<i class="${i <= review.rating ? 'fas' : 'far'} fa-star"></i> `;
                }

                const date = new Date(review.createdAt || new Date());
                const dateStr = date.toLocaleDateString('en-GB', { 
                    day: '2-digit', 
                    month: 'short', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                const html = `
                    <div class="media mb-4 animated fadeIn">
                        <img src="/img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                        <div class="media-body">
                            <h6>${review.userName || 'User'}<small> - <i>${dateStr}</i></small></h6>
                            <div class="text-primary mb-2">
                                ${starsHtml}
                            </div>
                            <p>${review.comment || review.Comment}</p>
                            ${(review.imageUrl || review.ImageUrl) ? `
                                <div class="mb-2">
                                    <img src="${review.imageUrl || review.ImageUrl}" alt="Review image" class="img-fluid rounded shadow-sm" style="max-width: 200px; cursor: pointer;" onclick="window.open(this.src)">
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `;

                // 3. Prepend to scroll container
                $('#reviews-scroll-container').prepend(html);
                
                // Scroll to top of reviews to show the new one
                $('#reviews-scroll-container').animate({ scrollTop: 0 }, 500);

                // 4. Update count header
                const count = $('#reviews-scroll-container .media').length;
                $('#reviews-count-header').text(`${count} đánh giá cho "${productName}"`);

                showProductToast('success', 'Một đánh giá mới vừa được duyệt!');
            });
        })();
    </script>
}
