@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Product.QuickViewModel
@{
    Layout = null;
}

<div class="modal-header border-0">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body pt-0">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel-modal" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="@(string.IsNullOrEmpty(Model.ViewModel.ImageUrl) ? "/img/product-1.jpg" : Model.ViewModel.ImageUrl)" alt="Image">
                    </div>
                    @foreach (var variant in Model.ViewModel.Variants.Where(v => !string.IsNullOrEmpty(v.ImageUrl)))
                    {
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="@variant.ImageUrl" alt="Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#product-carousel-modal" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel-modal" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.ViewModel.Name</h3>
            <div class="d-flex mb-3">
                <div class="text-primary mr-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Floor(Model.ViewModel.AvgRating))
                        {
                            <small class="fas fa-star"></small>
                        }
                        else if (i - 1 < Model.ViewModel.AvgRating)
                        {
                            <small class="fas fa-star-half-alt"></small>
                        }
                        else
                        {
                            <small class="far fa-star"></small>
                        }
                    }
                </div>
                <small class="pt-1">(@Model.ViewModel.ReviewCount Reviews)</small>
            </div>
            <h3 class="font-weight-semi-bold mb-4 product-price-modal">$@Model.ViewModel.BasePrice</h3>
            <p class="mb-4">@Model.ViewModel.Description</p>

            @if (Model.ViewModel.Variants.Any())
            {
                <div class="mb-4">
                    <p class="text-dark font-weight-medium mb-3">Chọn phiên bản (Size & Màu sắc):</p>
                    <div class="variant-container-modal d-flex flex-wrap" style="gap: 12px;">
                        @foreach (var variant in Model.ViewModel.Variants)
                        {
                            <label class="variant-option-modal">
                                <input type="radio" class="variant-selector-modal" name="variantId" value="@variant.Id" data-price="@variant.Price">
                                <div class="variant-card-modal shadow-sm">
                                    <span class="variant-info">@variant.Size</span>
                                    <span class="variant-sub-info">@variant.Color</span>
                                </div>
                            </label>
                        }
                    </div>
                </div>
            }

            <form asp-page="/Cart/AddToCart" method="post" id="add-to-cart-form-modal">
                <input type="hidden" name="productId" value="@Model.ViewModel.Id" />
                <input type="hidden" name="productVariantId" id="selected-variant-id-modal" value="" />
                
                <div class="d-flex align-items-center mb-4 pt-2 gap-3" style="gap: 12px;">
                    <div class="quantity-container-modal mr-3">
                        <button type="button" class="btn-qty-modal btn-minus-modal">
                            <i class="fa fa-minus"></i>
                        </button>
                        <input type="text" name="quantity" value="1" style="width: 40px; border: none; background: transparent; text-align: center; font-weight: 700;">
                        <button type="button" class="btn-qty-modal btn-plus-modal">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <button type="submit" class="btn-add-to-cart-modal shadow">
                        <i class="fa fa-shopping-cart"></i> THÊM VÀO GIỎ HÀNG
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .variant-option-modal {
        cursor: pointer;
        position: relative;
    }
    .variant-option-modal input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
    }
    .variant-card-modal {
        padding: 10px 20px;
        border: 2px solid #dee2e6;
        border-radius: 12px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 100px;
        user-select: none;
    }
    .variant-option-modal input:checked + .variant-card-modal {
        border-color: #D19C97;
        background-color: #fcf1f0;
        box-shadow: 0 4px 12px rgba(209, 156, 151, 0.15);
        transform: translateY(-2px);
    }
    .variant-card-modal:hover {
        border-color: #D19C97;
        background-color: #fdfaf9;
    }
    .variant-info {
        font-weight: 600;
        color: #333;
        font-size: 0.95rem;
    }
    .variant-sub-info {
        font-size: 0.8rem;
        color: #777;
        margin-top: 2px;
    }

    .quantity-container-modal {
        display: flex;
        align-items: center;
        background: #f8f9fa;
        border: 2px solid #dee2e6;
        border-radius: 12px;
        padding: 4px;
        width: fit-content;
    }
    .btn-qty-modal {
        width: 32px;
        height: 32px;
        border-radius: 8px !important;
        border: none;
        background: #fff;
        color: #333;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        font-size: 0.8rem;
    }
    .btn-qty-modal:hover {
        background: #D19C97;
        color: #fff;
    }
    .btn-add-to-cart-modal {
        background: #D19C97;
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 8px 20px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(209, 156, 151, 0.3);
        height: 44px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }
    .btn-add-to-cart-modal:hover {
        background: #c38b86;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(209, 156, 151, 0.4);
        color: #fff;
    }
</style>

<script>
    $(document).ready(function () {
        $('.variant-selector-modal').change(function () {
            var selectedVariantId = $(this).val();
            var price = $(this).data('price');
            
            if (selectedVariantId) {
                $('.product-price-modal').text('$' + parseFloat(price).toFixed(2));
                $('#selected-variant-id-modal').val(selectedVariantId);
            }
        });

        // Quantity selector logic
        $('.btn-qty-modal').on('click', function () {
            var button = $(this);
            var input = button.parent().find('input');
            var oldValue = input.val();
            var newVal;
            if (button.hasClass('btn-plus-modal')) {
                newVal = parseFloat(oldValue) + 1;
            } else {
                if (oldValue > 1) {
                    newVal = parseFloat(oldValue) - 1;
                } else {
                    newVal = 1;
                }
            }
            input.val(newVal).trigger('change');
        });

        $('input[name="quantity"]').on('keypress', function (e) {
            if (e.which < 48 || e.which > 57) {
                e.preventDefault();
            }
        });

        $('input[name="quantity"]').on('input change', function() {
            var val = $(this).val();
            if (val !== '') {
                var n = parseInt(val);
                if (isNaN(n) || n < 1) {
                    $(this).val(1);
                }
            }
        }).on('blur', function() {
            var val = $(this).val();
            if (val === '' || isNaN(parseInt(val)) || parseInt(val) < 1) {
                $(this).val(1);
            }
        });

        $('#add-to-cart-form-modal').submit(function (e) {
            var variantId = $('#selected-variant-id-modal').val();
            if (!variantId && @(Model.ViewModel.Variants.Any() ? "true" : "false")) {
                alert('Vui lòng chọn một phiên bản sản phẩm.');
                e.preventDefault();
            }
        });
    });
</script>
