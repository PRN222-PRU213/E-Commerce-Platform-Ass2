@page "{id:guid}"
@model E_Commerce_Platform_Ass2.Wed.Pages.Admin.Products.DetailModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box"></i> Chi tiết sản phẩm</h2>
        <div>
            @if (Model.Product.Status == "pending")
            {
                <a asp-page="/Admin/Products/Pending" class="btn btn-outline-warning me-2">
                    <i class="fas fa-clock"></i> Danh sách chờ duyệt
                </a>
            }
            <a asp-page="/Admin/Products/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Ảnh sản phẩm & Thông tin cơ bản -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin sản phẩm</h6>
                    @switch (Model.Product.Status)
                    {
                        case "active":
                            <span class="badge bg-success">Đang bán</span>
                            break;
                        case "pending":
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            break;
                        case "draft":
                            <span class="badge bg-secondary">Nháp</span>
                            break;
                        case "rejected":
                            <span class="badge bg-danger">Bị từ chối</span>
                            break;
                        default:
                            <span class="badge bg-secondary">
                                @(Model.Product.Status switch {
                                    "deleted" => "Đã xóa",
                                    "inactive" => "Ngừng hoạt động",
                                    _ => Model.Product.Status
                                })
                            </span>
                            break;
                    }
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                        {
                            <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name"
                                 class="img-fluid rounded" style="max-height: 200px; object-fit: contain;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                 style="height: 200px;">
                                <i class="fas fa-image fa-4x text-muted"></i>
                            </div>
                        }
                    </div>

                    <h4 class="text-center">@Model.Product.Name</h4>
                    <h5 class="text-center text-danger">@Model.Product.BasePrice.ToString("N0")₫</h5>

                    <hr />

                    <div class="mb-3">
                        <label class="text-muted small">Mô tả</label>
                        <p>@(string.IsNullOrEmpty(Model.Product.Description) ? "Chưa có mô tả" : Model.Product.Description)</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Cửa hàng</label>
                        <p>
                            <a asp-page="/Admin/Shops/Details" asp-route-id="@Model.Product.ShopId" class="text-decoration-none">
                                <i class="fas fa-store"></i> @Model.Product.ShopName
                            </a>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Danh mục</label>
                        <p><i class="fas fa-tag"></i> @Model.Product.CategoryName</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Đánh giá</label>
                        <p>
                            @if (Model.Product.AvgRating > 0)
                            {
                                <span class="text-warning">
                                    <i class="fas fa-star"></i> @Model.Product.AvgRating.ToString("0.1")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa có đánh giá</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Ngày tạo</label>
                        <p><i class="fas fa-calendar"></i> @Model.Product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>

                    <hr />

                    <!-- Thao tác -->
                    @if (Model.Product.Status == "pending")
                    {
                        <div class="d-grid gap-2">
                            <form asp-page-handler="ApproveProduct" asp-route-id="@Model.Product.Id" method="post">
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-check"></i> Duyệt sản phẩm
                                </button>
                            </form>
                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="fas fa-times"></i> Từ chối sản phẩm
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Biến thể sản phẩm -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-layer-group"></i> Biến thể sản phẩm (@(Model.Product.Variants?.Count ?? 0))
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Product.Variants != null && Model.Product.Variants.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Ảnh</th>
                                        <th>Tên biến thể</th>
                                        <th>Mã SKU</th>
                                        <th>Màu sắc</th>
                                        <th>Kích cỡ</th>
                                        <th>Giá</th>
                                        <th>Tồn kho</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int idx = 1;
                                    }
                                    @foreach (var variant in Model.Product.Variants)
                                    {
                                        <tr>
                                            <td>@idx</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(variant.ImageUrl))
                                                {
                                                    <img src="@variant.ImageUrl" alt="@variant.VariantName"
                                                         class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center"
                                                         style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>@variant.VariantName</td>
                                            <td><code>@variant.Sku</code></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(variant.Color))
                                                {
                                                    <span class="badge" style="background-color: @variant.Color; color: white;">
                                                        @variant.Color
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@(string.IsNullOrEmpty(variant.Size) ? "-" : variant.Size)</td>
                                            <td class="text-end">@variant.Price.ToString("N0")₫</td>
                                            <td class="text-center">
                                                @if (variant.Stock > 10)
                                                {
                                                    <span class="badge bg-success">@variant.Stock</span>
                                                }
                                                else if (variant.Stock > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">@variant.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                            <td>
                                                @switch (variant.Status)
                                                {
                                                    case "active":
                                                        <span class="badge bg-success">Hoạt động</span>
                                                        break;
                                                    case "inactive":
                                                        <span class="badge bg-secondary">Ngừng hoạt động</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">
                                                            @(variant.Status switch {
                                                                "deleted" => "Đã xóa",
                                                                "pending" => "Chờ duyệt",
                                                                "draft" => "Nháp",
                                                                "rejected" => "Bị từ chối",
                                                                _ => variant.Status
                                                            })
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                        idx++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Tổng biến thể</h6>
                                        <h4>@Model.Product.Variants.Count</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Tổng tồn kho</h6>
                                        <h4>@Model.Product.Variants.Sum(v => v.Stock)</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">Giá cao nhất</h6>
                                        <h4>@Model.Product.Variants.Max(v => v.Price).ToString("N0")₫</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Sản phẩm này chưa có biến thể nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Từ chối -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-page-handler="RejectProduct" asp-route-id="@Model.Product.Id" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Từ chối sản phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Lý do từ chối (không bắt buộc)</label>
                        <textarea name="reason" class="form-control" rows="3"
                                  placeholder="Nhập lý do từ chối..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Từ chối</button>
                </div>
            </form>
        </div>
    </div>
</div>

