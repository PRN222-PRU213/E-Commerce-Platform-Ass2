@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Admin.Reviews.IndexModel
@{
    ViewData["Title"] = "Manage Reviews";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-comments"></i> Manage All Reviews</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Product Reviews</h6>
            <div class="btn-group btn-group-sm" role="group">
                <button type="button" class="btn btn-outline-secondary active filter-btn" data-filter="all">Tất cả</button>
                <button type="button" class="btn btn-outline-success filter-btn" data-filter="clear">
                    <i class="fas fa-robot"></i> Đánh giá rõ ràng
                </button>
                <button type="button" class="btn btn-outline-danger filter-btn" data-filter="violation">
                    <i class="fas fa-robot"></i> Nhạy cảm / Không rõ ràng
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Product ID</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Image</th>
                            <th>Status</th>
                            <th>Submitted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="reviews-table-body">
                        @if (!Model.AllReviews.Any())
                        {
                            <tr id="no-reviews-row">
                                <td colspan="7" class="text-center text-muted">No reviews found.</td>
                            </tr>
                        }
                        else
                        {
                        @foreach (var review in Model.AllReviews)
                            {
                                var aiSuggestion = review.AISuggestion ?? (review.Status == "Approved" ? "Approve" : "Potential");
                                <tr class="review-row" data-ai-suggestion="@aiSuggestion" data-status="@review.Status" title="AI Suggestion: @aiSuggestion (@review.AIReason)">
                                    <td>@review.UserName</td>
                                    <td><small>@review.ProductId</small></td>
                                    <td>
                                        <div class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="@(i <= review.Rating ? "fas" : "far") fa-star"></i>
                                            }
                                        </div>
                                    </td>
                                    <td>@review.Comment</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(review.ImageUrl))
                                        {
                                            <img src="@review.ImageUrl" alt="Review Image" class="img-thumbnail" style="max-width: 100px; cursor: pointer;" onclick="window.open(this.src)">
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </td>
                                    <td>
                                        @if (review.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (review.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (review.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@review.Status</span>
                                        }
                                    </td>
                                    <td>@review.CreatedAt.ToString("g")</td>
                                    <td>
                                        @if (review.Status == "Pending")
                                        {
                                            <div class="d-flex gap-2">
                                                <form method="post" asp-page-handler="Approve" asp-route-id="@review.Id">
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Reject" asp-route-id="@review.Id">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else if (review.Status == "Rejected")
                                        {
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@review.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xóa vĩnh viễn đánh giá này?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i> Xóa vĩnh viễn
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted"><i class="fas fa-lock"></i> Moderated</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('rt:review-submitted', function (e) {
            const review = e.detail;
            console.log("[Admin Reviews] New review submitted real-time:", review);

            // 1. Remove "no reviews" row if it exists
            $('#no-reviews-row').remove();

            // 2. Build star rating HTML
            let starsHtml = '';
            for (let i = 1; i <= 5; i++) {
                starsHtml += `<i class="${i <= review.rating ? 'fas' : 'far'} fa-star"></i>`;
            }

            // 3. Format date
            const date = new Date(review.createdAt);
            const dateStr = date.toLocaleString('en-US', { 
                month: 'numeric', 
                day: 'numeric', 
                year: 'numeric', 
                hour: 'numeric', 
                minute: 'numeric', 
                hour12: true 
            });

            // 4. Build row HTML (Note: URLs for approve/reject need id)
            // Using a simple template for the row
            let suggestion = review.aiSuggestion || review.AISuggestion;
            if (!suggestion) {
                suggestion = (review.status === 'Approved' || review.Status === 'Approved') ? 'Approve' : 'Potential';
            }
            const html = `
                <tr class="table-info animated fadeIn review-row" data-ai-suggestion="${suggestion}" data-status="${review.status}" title="AI Suggestion: ${suggestion} (${review.aiReason || review.AIReason || ''})">
                    <td>${review.userName || 'N/A'}</td>
                    <td><small>${review.productId}</small></td>
                    <td><div class="text-warning">${starsHtml}</div></td>
                    <td>${review.comment || review.Comment}</td>
                    <td>
                        ${(review.imageUrl || review.ImageUrl) ? 
                            `<img src="${review.imageUrl || review.ImageUrl}" alt="Review Image" class="img-thumbnail" style="max-width: 100px; cursor: pointer;" onclick="window.open(this.src)">` : 
                            '<span class="text-muted">No Image</span>'}
                    </td>
                    <td><span class="badge bg-warning text-dark">Pending</span></td>
                    <td>${dateStr}</td>
                    <td>
                        <div class="d-flex gap-2">
                            <form method="post" action="/Admin/Reviews/Index?handler=Approve&id=${review.id}">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                ${$('input[name="__RequestVerificationToken"]').first().prop('outerHTML') || ''}
                            </form>
                            <form method="post" action="/Admin/Reviews/Index?handler=Reject&id=${review.id}">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                                ${$('input[name="__RequestVerificationToken"]').first().prop('outerHTML') || ''}
                            </form>
                        </div>
                    </td>
                </tr>
            `;

            // 5. Prepend to table
            $('#reviews-table-body').prepend(html);

            // 6. Respect current filter
            const currentFilter = $('.filter-btn.active').data('filter');
            const newRow = $('#reviews-table-body .review-row').first();
            if (currentFilter !== 'all') {
                const suggestion = review.aiSuggestion;
                if (currentFilter === 'clear' && suggestion !== 'Approve') {
                    newRow.hide();
                } else if (currentFilter === 'violation' && suggestion === 'Approve') {
                    newRow.hide();
                }
            }

            // 7. Show notification via layout function
            if (typeof showAdminToast === 'function') {
                showAdminToast('info', 'Có bình luận mới vừa được gửi!');
            }

            // 8. Re-initialize tooltips
            initTooltips();
        });

        function initTooltips() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
              return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        }

        // AI Filtering Logic
        $(document).on('click', '.filter-btn', function() {
            const filter = $(this).data('filter');
            console.log("[Admin Reviews] Filtering by category:", filter);
            
            // Update button styles
            $('.filter-btn').removeClass('active');
            $(this).addClass('active');

            $('.review-row').hide();

            if (filter === 'all') {
                $('.review-row').show();
            } else if (filter === 'clear') {
                // Hiển thị tất cả những gì AI đánh giá là sạch (Approve)
                $('.review-row').filter(function() {
                    return $(this).data('ai-suggestion') === 'Approve';
                }).show();
            } else if (filter === 'violation') {
                // Hiển thị những gì AI đánh giá là Vi phạm hoặc Nghi vấn
                $('.review-row').filter(function() {
                    const ai = $(this).data('ai-suggestion');
                    return ai === 'Reject' || ai === 'Potential';
                }).show();
            }

            const visibleCount = $('.review-row:visible').length;
            console.log(`[Admin Reviews] Filter complete. Visible rows: ${visibleCount}`);

            // Priority sorting: Move 'Pending' ones to top of the visible list
            const tableBody = $('#reviews-table-body');
            const visibleRows = $('.review-row:visible');
            
            // Re-order visible rows: Pending first
            const pendingRows = visibleRows.filter('[data-status="Pending"]');
            const moderatedRows = visibleRows.filter(':not([data-status="Pending"])');
            
            // Instead of re-appending all, just prepend pending to ensure they are first
            // Note: Since they were already sorted by date, prepending them in reverse order 
            // (or just prepending them) might mess up date order.
            // Better: re-append all visible rows in correct order.
            
            const sortedVisible = [...pendingRows, ...moderatedRows];
            tableBody.prepend(sortedVisible);

            // Show "no reviews" if everything is hidden
            if ($('.review-row:visible').length === 0) {
                if ($('#no-results-row').length === 0) {
                    $('#reviews-table-body').append('<tr id="no-results-row"><td colspan="9" class="text-center text-muted">Không có đánh giá nào khớp với bộ lọc.</td></tr>');
                }
            } else {
                $('#no-results-row').remove();
            }
        });

        // Initial tooltip init
        document.addEventListener('DOMContentLoaded', initTooltips);
    </script>
}
