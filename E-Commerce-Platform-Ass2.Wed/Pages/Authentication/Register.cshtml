@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Authentication.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Pages/Shared/_AuthLayout.cshtml";
}

<div class="text-center mb-4">
    <h2 class="font-weight-semi-bold mb-3">Tạo tài khoản mới</h2>
    <p class="text-muted">Điền thông tin bên dưới để tạo tài khoản mới của bạn.</p>
</div>

<form method="post" class="mt-4">
    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

    <div class="form-group">
        <label asp-for="Input.Name" class="font-weight-semi-bold">
            <i class="fas fa-user text-primary mr-2"></i>Họ tên
        </label>
        <input asp-for="Input.Name" class="form-control border-0 py-4" placeholder="Nhập họ tên của bạn" />
        <span asp-validation-for="Input.Name" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Email" class="font-weight-semi-bold">
            <i class="fas fa-envelope text-primary mr-2"></i>Email
        </label>
        <input asp-for="Input.Email" class="form-control border-0 py-4" placeholder="Nhập email của bạn" />
        <span asp-validation-for="Input.Email" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password" class="font-weight-semi-bold">
            <i class="fas fa-lock text-primary mr-2"></i>Mật khẩu
        </label>
        <input asp-for="Input.Password" class="form-control border-0 py-4" placeholder="Nhập mật khẩu" />
        <span asp-validation-for="Input.Password" class="text-danger small"></span>
        <small class="form-text text-muted">
            <i class="fas fa-info-circle mr-1"></i>Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số.
        </small>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="font-weight-semi-bold">
            <i class="fas fa-lock text-primary mr-2"></i>Xác nhận mật khẩu
        </label>
        <input asp-for="Input.ConfirmPassword" class="form-control border-0 py-4" placeholder="Nhập lại mật khẩu" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="agreeTerms" required>
            <label class="custom-control-label" for="agreeTerms">
                Tôi đồng ý với <a href="#" class="text-primary">Điều khoản và Chính sách</a> của website
            </label>
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary btn-block border-0 py-3">
            <i class="fas fa-user-plus mr-2"></i>Đăng ký ngay
        </button>
    </div>
</form>

<div class="text-center">
    <p class="text-muted mb-0">Đã có tài khoản?</p>
    <a asp-page="/Authentication/Login" class="font-weight-semi-bold text-primary">
        <i class="fas fa-sign-in-alt mr-1"></i>Đăng nhập ngay
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
