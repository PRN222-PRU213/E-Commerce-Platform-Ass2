@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Authentication.ResendVerificationModel
@{
    ViewData["Title"] = "Gửi lại Email xác thực";
    Layout = "~/Pages/Shared/_EmailVerificationLayout.cshtml";
}

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-paper-plane verification-icon"></i>
    </div>
    <h2 class="verification-title">Gửi lại Email xác thực</h2>
    <p class="verification-text mb-4">Nhập địa chỉ email bạn đã đăng ký để nhận lại link xác thực.</p>
    
    <form method="post" class="text-left">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        
        <div class="form-group mb-4">
            <label for="InputEmail" class="font-weight-semi-bold">
                <i class="fas fa-envelope mr-1"></i>Email
            </label>
            <input type="email" 
                   class="form-control form-control-lg @(ViewData.ModelState["InputEmail"]?.Errors.Count > 0 ? "is-invalid" : "")" 
                   id="InputEmail" 
                   asp-for="InputEmail"
                   placeholder="Nhập email của bạn" 
                   required
                   style="border-radius: 10px; padding: 12px 20px;">
            <span asp-validation-for="InputEmail" class="text-danger"></span>
        </div>
        
        <div class="alert alert-info">
            <i class="fas fa-info-circle mr-2"></i>
            Nếu email tồn tại trong hệ thống và chưa được xác thực, bạn sẽ nhận được email mới.
        </div>
        
        <button type="submit" class="btn btn-verification w-100 mt-3">
            <i class="fas fa-paper-plane mr-2"></i>Gửi Email xác thực
        </button>
    </form>
    
    <hr class="my-4">
    
    <div class="mt-4">
        <p class="verification-text mb-3">Đã xác thực email?</p>
        <a asp-page="/Authentication/Login" class="btn btn-outline-verification">
            <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
        </a>
    </div>
    
    <div class="mt-3">
        <a asp-page="/Authentication/Register" class="back-link small">
            <i class="fas fa-user-plus mr-1"></i>Chưa có tài khoản? Đăng ký ngay
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
