@section Scripts {
    <script>
        function openQuickView(productId) {
            $.ajax({
                url: '/Product/QuickView?id=' + productId,
                type: 'GET',
                success: function (data) {
                    $('#quickViewModalContent').html(data);
                    $('#quickViewModal').modal('show');
                },
                error: function () {
                    alert('Lỗi khi tải thông tin sản phẩm.');
                }
            });
        }

        // Real-time: reload when a product is approved/changed
        document.addEventListener('rt:product-changed', function (e) {
            var detail = e.detail;
            if (detail && (detail.changeType === 'approved' || detail.ChangeType === 'approved')) {
                console.log('Product approved! Reloading homepage...');
                setTimeout(function () {
                    window.location.href = window.location.href;
                }, 1000);
            }
        });
    </script>
}