@section Scripts {
    <script>
        function openQuickView(productId) {
            $.ajax({
                url: '/Product/QuickView?id=' + productId,
                type: 'GET',
                success: function (data) {
                    $('#quickViewModalContent').html(data);
                    $('#quickViewModal').modal('show');
                },
                error: function () {
                    alert('Lỗi khi tải thông tin sản phẩm.');
                }
            });
        }

        // ====== AJAX Search ======
        var searchTimeout = null;
        var currentPage = 1;

        function doSearch(keyword, page, scrollToProducts) {
            page = page || 1;
            currentPage = page;
            var $grid = $('#products-grid');
            var $info = $('#searchInfo');

            // Loading spinner
            $grid.css('opacity', '0.4').css('pointer-events', 'none');

            $.ajax({
                url: '/?handler=ProductsPartial',
                type: 'GET',
                data: { SearchKeyword: keyword, currentpage: page },
                success: function (html) {
                    $grid.html(html).css('opacity', '1').css('pointer-events', '');

                    // Cập nhật info bar
                    if (keyword && keyword.trim() !== '') {
                        var count = $grid.find('[data-total-count]').data('total-count') || 0;
                        $('#searchKeywordDisplay').text('"' + keyword.trim() + '"');
                        $('#searchCountBadge').text(count + ' sản phẩm');
                        $info.show();
                    } else {
                        $info.hide();
                    }

                    // Nút clear
                    $('#clearBtn').toggle(!!(keyword && keyword.trim() !== ''));

                    // Cập nhật URL không reload trang
                    var params = new URLSearchParams();
                    if (keyword && keyword.trim()) params.set('SearchKeyword', keyword.trim());
                    if (page > 1) params.set('currentpage', page);
                    var newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
                    history.replaceState(null, '', newUrl);

                    // Gắn lại event cho pagination AJAX
                    bindPagination();

                    // Scroll nhẹ xuống vùng sản phẩm nếu cần
                    if (scrollToProducts) {
                        var offset = $('#products-section').offset().top - 80;
                        $('html, body').animate({ scrollTop: offset }, 300);
                    }
                },
                error: function () {
                    $grid.css('opacity', '1').css('pointer-events', '');
                }
            });
        }

        function bindPagination() {
            $('#products-grid').find('.pagination .page-link').off('click.ajax').on('click.ajax', function (e) {
                e.preventDefault();
                var href = $(this).attr('href');
                if (!href || href === '#' || $(this).closest('.page-item').hasClass('disabled')) return;
                var params = new URLSearchParams(href.split('?')[1] || '');
                var page = parseInt(params.get('currentpage')) || 1;
                var keyword = $('#searchInput').val();
                doSearch(keyword, page, true);
            });
        }

        $(document).ready(function () {
            // Search khi nhấn nút
            $('#searchBtn').on('click', function () {
                doSearch($('#searchInput').val(), 1, true);
            });

            // Search khi nhấn Enter
            $('#searchInput').on('keydown', function (e) {
                if (e.key === 'Enter') {
                    clearTimeout(searchTimeout);
                    doSearch($(this).val(), 1, true);
                }
            });

            // Search tự động khi dừng gõ 400ms
            $('#searchInput').on('input', function () {
                clearTimeout(searchTimeout);
                var keyword = $(this).val();
                searchTimeout = setTimeout(function () {
                    doSearch(keyword, 1, false);
                }, 400);
            });

            // Nút xóa
            $('#clearBtn').on('click', function () {
                $('#searchInput').val('').focus();
                doSearch('', 1, false);
            });

            // Gắn pagination cho lần render đầu
            bindPagination();
        });

        // Real-time: reload khi sản phẩm được duyệt
        document.addEventListener('rt:product-changed', function (e) {
            var d = e.detail;
            if (!d) return;
            var changeType = (d.changeType || d.ChangeType || '').toLowerCase();
            var status = (d.status || d.Status || '').toLowerCase();
            var shouldReload =
                changeType === 'approved' ||
                (changeType === 'statuschanged' && (
                    status === 'active' || status === 'approved' ||
                    status === 'draft' || status === 'inactive' || status === 'rejected'
                ));
            if (shouldReload) {
                setTimeout(function () {
                    doSearch($('#searchInput').val(), currentPage, false);
                }, 1500);
            }
        });
    </script>
}