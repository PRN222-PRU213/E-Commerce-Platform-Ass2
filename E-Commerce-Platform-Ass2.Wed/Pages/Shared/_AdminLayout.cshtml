@* Copied from Ass1 _AdminLayout, updated for Razor Pages routing *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang quản trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <style>
        .notification-dropdown {
            position: relative;
            margin-right: 1.5rem;
        }
        .notification-bell {
            font-size: 1.25rem;
            color: #4e73df;
            cursor: pointer;
            position: relative;
            padding: 5px;
        }
        .notification-bell .badge-counter {
            position: absolute;
            top: 0;
            right: 5px;
            font-size: 0.65rem;
            font-weight: 700;
            padding: 0.2rem 0.4rem;
            z-index: 5;
            line-height: 1;
        }
        .notification-list {
            width: 320px !important;
            max-height: 400px;
            overflow-y: auto;
            padding: 0;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .notification-header {
            background-color: #4e73df;
            color: white;
            padding: 10px 15px;
            font-size: 0.85rem;
            font-weight: bold;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }
        .notification-item {
            padding: 12px 15px;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            align-items: flex-start;
            text-decoration: none !important;
            color: #3a3b45 !important;
            transition: background 0.2s;
        }
        .notification-item.unread {
            background-color: #f0f4ff;
            font-weight: bold;
        }
        .notification-item.unread .notification-text {
            color: #2e59d9;
        }
        .notification-item:hover {
            background-color: #eaecf4;
        }
        .notification-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #4e73df;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            flex-shrink: 0;
        }
        .notification-content {
            flex-grow: 1;
        }
        .notification-text {
            font-size: 0.85rem;
            line-height: 1.2;
            display: block;
            margin-bottom: 3px;
        }
        .notification-time {
            font-size: 0.75rem;
            color: #858796;
        }
        .no-notifications {
            padding: 20px;
            text-align: center;
            color: #858796;
            font-size: 0.85rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="sidebar-brand">
            <h4><i class="fas fa-shield-alt text-primary"></i> Trang quản trị</h4>
            <small>Nền tảng thương mại điện tử</small>
        </div>

        <nav class="sidebar-menu">
            <div class="menu-header">Tổng quan</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin") && Context.Request.Path == "/Admin" ? "active" : "")"
                       asp-page="/Admin/Index">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </li>
            </ul>

            <div class="menu-header">Quản lý Shop</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Shops") ? "active" : "")"
                       asp-page="/Admin/Shops/Index">
                        <i class="fas fa-store"></i>
                        <span>Tất cả Shop</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                       asp-page="/Admin/Shops/Index" asp-route-status="Pending">
                        <i class="fas fa-hourglass-half"></i>
                        <span>Shop chờ duyệt</span>
                    </a>
                </li>
            </ul>

            <div class="menu-header">Quản lý Sản phẩm</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Products/Index") ? "active" : "")"
                       asp-page="/Admin/Products/Index">
                        <i class="fas fa-box"></i>
                        <span>Tất cả sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Products/Pending") ? "active" : "")"
                       asp-page="/Admin/Products/Pending">
                        <i class="fas fa-clock"></i>
                        <span>Sản phẩm chờ duyệt</span>
                    </a>
                </li>
            </ul>

            <div class="menu-header">Danh mục</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Categories") ? "active" : "")"
                       asp-page="/Admin/Categories/Index">
                        <i class="fas fa-tags"></i>
                        <span>Danh mục</span>
                    </a>
                </li>
            </ul>

            <div class="menu-header">Hệ thống</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Reviews") ? "active" : "")"
                       asp-page="/Admin/Reviews/Index">
                        <i class="fas fa-comments"></i>
                        <span>Quản lý Bình luận</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <header class="admin-topbar">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-page="/Admin/Index">Admin</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @ViewData["Title"]
                    </li>
                </ol>
            </nav>

            <div class="d-flex align-items-center">
                <!-- Notification Bell -->
                <div class="notification-dropdown dropdown">
                    <a class="nav-link dropdown-toggle notification-bell" href="#" id="alertsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-bell fa-fw"></i>
                        <!-- Counter - Alerts -->
                        <span class="badge bg-danger rounded-pill badge-counter d-none" id="notification-count">0</span>
                    </a>
                    <!-- Dropdown - Alerts -->
                    <div class="dropdown-list dropdown-menu dropdown-menu-end shadow animated--grow-in notification-list" aria-labelledby="alertsDropdown">
                        <div class="notification-header text-uppercase">
                            Trung tâm thông báo
                        </div>
                        <div id="notification-items-container">
                            <div class="no-notifications">Không có thông báo mới</div>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="d-flex justify-content-between px-3 py-2">
                             <a class="small text-gray-500" href="#" id="mark-all-read">Đánh dấu tất cả đã đọc</a>
                             <a class="small text-gray-500" href="/Admin/Reviews/Index">Xem tất cả</a>
                        </div>
                    </div>
                </div>

                <div class="user-dropdown dropdown">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a class="dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                        <div class="user-avatar">
                            @User.Identity!.Name?.FirstOrDefault()
                        </div>
                        <span>@User.Identity!.Name</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" asp-page="/Authentication/Profile">
                            <i class="fas fa-user-circle me-2"></i>Hồ sơ
                        </a>
                        <form asp-page="/Authentication/Logout" method="post">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </div>
                }
            </div>
        </header>

        <section class="admin-content">
            @RenderBody()
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr.min.js" asp-append-version="true"></script>
    <script src="~/js/realtime.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            const $countBadge = $('#notification-count');
            const $container = $('#notification-items-container');
            const STORAGE_KEY = 'admin_notifications';

            // Load from localStorage
            let notifications = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            
            function saveNotifications() {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(notifications));
            }

            function updateBadge() {
                const unreadCount = notifications.filter(n => !n.isRead).length;
                if (unreadCount > 0) {
                    $countBadge.text(unreadCount > 9 ? '9+' : unreadCount).removeClass('d-none');
                } else {
                    $countBadge.addClass('d-none');
                }
            }

            function renderNotifications() {
                $container.empty();
                if (notifications.length === 0) {
                    $container.html('<div class="no-notifications">Không có thông báo mới</div>');
                    return;
                }

                // Sort by timestamp descending
                const sorted = [...notifications].sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                
                // Show latest 10
                sorted.slice(0, 10).forEach(msg => {
                    const timeStr = new Date(msg.timestamp).toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });
                    const iconClass = msg.type === 'success' ? 'fa-check-circle bg-success' 
                                   : msg.type === 'error' ? 'fa-exclamation-circle bg-danger' 
                                   : msg.type === 'warning' ? 'fa-exclamation-triangle bg-warning' 
                                   : 'fa-info-circle bg-primary';

                    const html = `
                        <a class="notification-item ${msg.isRead ? '' : 'unread'}" 
                           href="${msg.link || '/Admin/Reviews/Index'}" 
                           data-id="${msg.id}">
                            <div class="notification-icon">
                                <i class="fas ${iconClass}"></i>
                            </div>
                            <div class="notification-content">
                                <span class="notification-text">${msg.message}</span>
                                <span class="notification-time">${timeStr}</span>
                            </div>
                        </a>
                    `;
                    $container.append(html);
                });
            }

            // Initial render
            renderNotifications();
            updateBadge();

            document.addEventListener('rt:notification', function (e) {
                const message = e.detail;
                console.log("[Admin Layout] New notification received:", message);

                // Handle both camelCase from SignalR default and PascalCase from some C# emitters
                const msgType = message.type || message.Type || 'info';
                const msgText = message.message || message.Message || 'Có thông báo mới';
                const msgLink = message.link || message.Link || '/Admin/Reviews/Index';
                const msgTimestamp = message.timestampUtc || message.TimestampUtc || new Date().toISOString();

                const newNotif = {
                    id: Date.now() + Math.random().toString(36).substr(2, 9),
                    type: msgType,
                    message: msgText,
                    link: msgLink,
                    timestamp: msgTimestamp,
                    isRead: false
                };

                notifications.unshift(newNotif);
                // Keep only last 50
                if (notifications.length > 50) notifications.pop();
                
                saveNotifications();
                renderNotifications();
                updateBadge();
                
                // Show toast via layout function (already defined)
                if (typeof showAdminToast === 'function') {
                    showAdminToast(newNotif.type, newNotif.message);
                }
            });

            // Handle clicking on a notification item
            $container.on('click', '.notification-item', function(e) {
                const id = $(this).data('id');
                const notif = notifications.find(n => n.id == id);
                if (notif && !notif.isRead) {
                    notif.isRead = true;
                    saveNotifications();
                    updateBadge();
                    renderNotifications();
                }
            });

            // Mark all as read
            $('#mark-all-read').on('click', function(e) {
                e.preventDefault();
                notifications.forEach(n => n.isRead = true);
                saveNotifications();
                updateBadge();
                renderNotifications();
            });

            function showAdminToast(type, message) {
                var bgClass = type === 'success' ? 'bg-success' : type === 'warning' ? 'bg-warning' : type === 'error' ? 'bg-danger' : 'bg-info';
                var iconClass = type === 'success' ? 'fa-check-circle' : type === 'warning' ? 'fa-exclamation-triangle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
                var html = '<div class="toast align-items-center text-white ' + bgClass + ' border-0" role="alert" style="position:fixed;top:80px;right:20px;z-index:9999;"><div class="d-flex"><div class="toast-body"><i class="fas ' + iconClass + ' me-2"></i>' + message + '</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div></div>';
                var div = document.createElement('div');
                div.innerHTML = html;
                document.body.appendChild(div.firstElementChild);
                var toastEl = document.body.querySelector('.toast:last-child');
                var toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
                toastEl.addEventListener('hidden.bs.toast', function () { toastEl.remove(); });
            }

            // Expose globally for pages
            window.showAdminToast = showAdminToast;

            // Reset counter when clicking the bell (User requested "đánh dấu đã đọc")
            // If they click the bell, we could mark all as read OR just hide the badge
            // The user said "nhấn vào thì nhảy qua đúng Quản lý Bình luận luôn và đánh dấu đã đọc"
            // This refers to the specific item.
            $('#alertsDropdown').on('click', function() {
                // Optionally mark all as read when opening dropdown? 
                // "như các thông báo bình thường khác" usually means opening dropdown clears the badge.
                // notifications.forEach(n => n.isRead = true);
                // saveNotifications();
                // $countBadge.hide();
                // renderNotifications();
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

