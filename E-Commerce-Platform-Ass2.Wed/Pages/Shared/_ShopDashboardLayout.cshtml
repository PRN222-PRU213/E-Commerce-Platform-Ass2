@* Copied from Ass1 _ShopDashboardLayout, updated for Razor Pages *@
<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("Partials/_Head")

    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Topbar Start - Simplified for Dashboard -->
    <div class="container-fluid bg-light border-bottom">
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-6">
                <a asp-page="/Index" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper
                    </h1>
                </a>
            </div>
            <div class="col-lg-6 text-right">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="d-inline-flex align-items-center">
                        @await Html.PartialAsync("Partials/_NotificationBell")
                        <div class="nav-item dropdown user-profile-dropdown">
                            <a href="#" class="nav-link dropdown-toggle user-profile-link" id="userDropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle mr-2"></i>
                                <span class="user-name">@User.Identity!.Name</span>
                                <i class="fas fa-chevron-down ml-2 dropdown-arrow"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right user-dropdown-menu" aria-labelledby="userDropdown">
                                <div class="dropdown-header user-dropdown-header">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-circle">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="ml-2">
                                            <div class="font-weight-semi-bold">@User.Identity!.Name</div>
                                            <small class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item user-dropdown-item" asp-page="/Authentication/Profile">
                                    <i class="fas fa-user mr-2 text-primary"></i>Hồ sơ của tôi
                                </a>
                                @await Component.InvokeAsync("UserShopMenu")
                                <a class="dropdown-item user-dropdown-item" asp-page="/Order/History">
                                    <i class="fas fa-shopping-bag mr-2 text-primary"></i>Đơn hàng
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-page="/Authentication/Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item user-dropdown-item logout-btn">
                                        <i class="fas fa-sign-out-alt mr-2 text-danger"></i>Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-page="/Authentication/Login" class="btn btn-outline-primary mr-2">Đăng nhập</a>
                    <a asp-page="/Authentication/Register" class="btn btn-primary">Đăng ký</a>
                }
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    @RenderBody()

    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    @await Html.PartialAsync("Partials/_Scripts")
    @await Html.PartialAsync("Partials/_Notifications")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

