@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Order.HistoryModel
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Pages/Shared/_EShopperLayout.cshtml";
}

<style>
    .page-container {
        background-color: #EDF1FF;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .order-history-header {
        background: linear-gradient(135deg, #D19C97 0%, #c88a84 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(209, 156, 151, 0.3);
    }

    .order-table-header {
        background: white;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        font-weight: 600;
        font-size: 0.85rem;
        color: #3D464D;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .order-row {
        background: white;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
        border-left: 3px solid #D19C97;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .order-row:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 15px rgba(209, 156, 151, 0.2);
    }

    .order-cell {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
    }

    .order-total {
        font-size: 1.1rem;
        font-weight: 700;
        color: #000000;
    }

    .status-badge {
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
        display: inline-block;
        min-width: 130px;
        text-align: center;
        color: white !important;
    }

    /* Custom status colors */
    .bg-info {
        background-color: #17a2b8 !important;
    }

    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .bg-primary {
        background-color: #007bff !important;
    }

    .bg-success-dark {
        background-color: #155724 !important;
    }

    .action-btn {
        padding: 0.5rem 0.85rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        white-space: nowrap;
        width: 110px;
    }

    .btn-detail {
        background: #6c63ff;
        color: white;
    }

    .btn-detail:hover {
        background: #5a52e0;
        transform: scale(1.05);
        box-shadow: 0 3px 10px rgba(108, 99, 255, 0.4);
        color: white;
    }

    .btn-reorder {
        background: #dc3545;
        color: white;
    }

    .btn-reorder:hover {
        background: #c82333;
        transform: scale(1.05);
        box-shadow: 0 3px 10px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .btn-refund {
        background: #dc3545;
        color: white;
    }

    .btn-refund:hover {
        background: #c82333;
        transform: scale(1.05);
        box-shadow: 0 3px 10px rgba(220, 53, 69, 0.4);
        color: white;
    }

    /* Modern Pagination */
    .modern-pagination {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        align-items: center;
    }

    .modern-pagination .page-item {
        list-style: none;
    }

    .modern-pagination .page-link {
        border: 1px solid #D19C97;
        background: white;
        color: #3D464D;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        min-width: 40px;
        text-align: center;
    }

    .modern-pagination .page-link:hover {
        background: #D19C97;
        color: white;
        border-color: #D19C97;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(209, 156, 151, 0.3);
    }

    .modern-pagination .page-item.active .page-link {
        background: #D19C97;
        border-color: #D19C97;
        color: white;
        box-shadow: 0 4px 12px rgba(209, 156, 151, 0.4);
    }

    .modern-pagination .page-item.disabled .page-link {
        background: #e9ecef;
        color: #6c757d;
        cursor: not-allowed;
        box-shadow: none;
        border-color: #e9ecef;
    }

    .modern-pagination .page-item.disabled .page-link:hover {
        transform: none;
        background: #e9ecef;
        color: #6c757d;
    }
</style>

<div class="page-container">
    <div class="container-fluid px-4">
        <div class="order-history-header text-center">
            <h2 class="mb-1"><i class="fas fa-shopping-bag me-2"></i>Lịch sử đơn hàng</h2>
            <p class="mb-0 opacity-75">Quản lý và theo dõi tất cả đơn hàng của bạn</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div id="successAlert"
                 class="alert alert-success alert-dismissible fade show"
                 role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div id="errorAlert"
                 class="alert alert-danger alert-dismissible fade show"
                 role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!Model.ViewModel.Items.Any())
        {
            <div class="alert alert-info border-0 shadow-sm text-center py-5">
                <i class="fas fa-box-open fa-3x mb-3 text-muted"></i>
                <p class="mb-0">Bạn chưa có đơn hàng nào.</p>
            </div>
        }
        else
        {
            <!-- Table Header -->
            <div class="order-table-header">
                <div class="row align-items-center">
                    <div class="col-2 text-center"><i class="fas fa-calendar me-1"></i>Ngày đặt</div>
                    <div class="col-1 text-center"><i class="fas fa-hashtag me-1"></i>Mã ĐH</div>
                    <div class="col-2 text-center"><i class="fas fa-info-circle me-1"></i>Trạng thái</div>
                    <div class="col-2 text-center"><i class="fas fa-map-marker-alt me-1"></i>Địa chỉ</div>
                    <div class="col-2 text-center"><i class="fas fa-money-bill-wave me-1"></i>Tổng tiền</div>
                    <div class="col-3 text-center"><i class="fas fa-cog me-1"></i>Thao tác</div>
                </div>
            </div>

            <!-- Order Rows -->
            <div class="order-list">
                @foreach (var item in Model.ViewModel.Items)
                {
                    <div class="order-row">
                        <div class="row align-items-center">
                            <!-- Date -->
                            <div class="col-2 text-center order-cell" style="justify-content: center;">
                                <div class="w-100">
                                    <div>@item.OrderDate.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@item.OrderDate.ToString("HH:mm")</small>
                                </div>
                            </div>

                            <!-- Order ID -->
                            <div class="col-1 text-center order-cell" style="justify-content: center;">
                                <strong>#@item.OrderId.ToString().Substring(0, 5)</strong>
                            </div>

                            <!-- Status -->
                            <div class="col-2 text-center order-cell" style="justify-content: center;">
                                <span class="status-badge status-badge-fixed
                                    @(item.Status == "Paid" ? "bg-success-dark" :
                                      item.Status == "Pending" ? "bg-warning text-dark" :
                                      item.Status == "Cancelled" ? "bg-danger" :
                                      item.Status == "Processing" ? "bg-info" :
                                      item.Status == "Preparing" ? "bg-purple" :
                                      item.Status == "Shipped" ? "bg-primary" :
                                      item.Status == "Completed" ? "bg-success" :
                                      "bg-secondary")">
                                    @(item.Status == "Paid" ? "Đã thanh toán" :
                                      item.Status == "Pending" ? "Chờ xử lý" :
                                      item.Status == "Cancelled" ? "Đã hủy" :
                                      item.Status == "Processing" ? "Đang xử lý" :
                                      item.Status == "Preparing" ? "Chuẩn bị hàng" :
                                      item.Status == "Shipped" ? "Vận chuyển" :
                                      item.Status == "Completed" ? "Hoàn thành" :
                                      item.Status)
                                </span>
                            </div>

                            <!-- Address -->
                            <div class="col-2 order-cell" style="justify-content: center;">
                                <div class="text-truncate text-center w-100" title="@item.ShippingAddress">
                                    @item.ShippingAddress
                                </div>
                            </div>

                            <!-- Total -->
                            <div class="col-2 text-center order-cell" style="justify-content: center;">
                                <div class="order-total">@item.TotalAmount.ToString("N0") đ</div>
                            </div>

                            <!-- Actions -->
                            <div class="col-3 order-cell" style="justify-content: center;">
                                <div class="d-flex justify-content-center flex-nowrap">
                                    <a asp-page="/Order/Detail"
                                       asp-route-orderId="@item.OrderId"
                                       class="action-btn btn-detail mr-3"
                                       title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                        <span>Chi tiết</span>
                                    </a>

                                    @if (item.Status == "Cancelled")
                                    {
                                        <form asp-page="/Order/Reorder" asp-route-orderId="@item.OrderId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-btn btn-reorder" title="Mua lại">
                                                <i class="fas fa-redo"></i>
                                                <span>Mua lại</span>
                                            </button>
                                        </form>
                                    }

                                    @if (item.Status == "Paid" && !item.IsRefunded)
                                    {
                                        <button type="button"
                                                class="action-btn btn-refund"
                                                data-toggle="modal"
                                                data-target="#refundModal"
                                                data-order-id="@item.OrderId"
                                                data-amount="@item.TotalAmount"
                                                title="Hoàn tiền">
                                            <i class="fas fa-undo"></i>
                                            <span>Hoàn tiền</span>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Modern Pagination -->
            <nav class="mt-4 pb-5">
                <ul class="modern-pagination">
                    <li class="page-item @(Model.ViewModel.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="/Order/History"
                           asp-route-pageIndex="@(Model.ViewModel.CurrentPage - 1)">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.ViewModel.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.ViewModel.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-page="/Order/History"
                               asp-route-pageIndex="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.ViewModel.CurrentPage == Model.ViewModel.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="/Order/History"
                           asp-route-pageIndex="@(Model.ViewModel.CurrentPage + 1)">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form asp-page="/Refund/Request" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header" style="background: linear-gradient(135deg, #D19C97 0%, #c88a84 100%); color: white;">
                <h5 class="modal-title"><i class="fas fa-undo mr-2"></i>Xác nhận hoàn tiền</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:white">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="orderId" id="refundOrderId" />

                <div class="form-group">
                    <label class="font-weight-bold"><i class="fas fa-money-bill-wave mr-2"></i>Số tiền hoàn</label>
                    <input type="number"
                           class="form-control"
                           name="amount"
                           id="refundAmount"
                           readonly />
                </div>

                <div class="form-group">
                    <label class="font-weight-bold"><i class="fas fa-comment-dots mr-2"></i>Lý do hoàn tiền</label>
                    <textarea class="form-control"
                              name="reason"
                              rows="3"
                              placeholder="Vui lòng nhập lý do hoàn tiền..."
                              required></textarea>
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>Sau khi hoàn tiền, đơn hàng sẽ bị hủy.
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-1"></i>Hủy
                </button>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-check mr-1"></i>Xác nhận hoàn tiền
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    // Bootstrap 4: use jQuery modal events
    $('#refundModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var orderId = button.data('order-id');
        var amount  = button.data('amount');

        $('#refundOrderId').val(orderId);
        $('#refundAmount').val(amount);
    });

    // Auto hide success alert (Bootstrap 4)
    setTimeout(function () {
        $('#successAlert').alert('close');
    }, 3000);

    // Auto hide error alert (Bootstrap 4)
    setTimeout(function () {
        $('#errorAlert').alert('close');
    }, 5000);

    // Real-time update order list when receiving order notifications
    console.log('[Order History] Page loaded, listening for notifications...');
    
    // Add connection status indicator
    const statusIndicator = document.createElement('div');
    statusIndicator.id = 'signalr-status';
    statusIndicator.style.cssText = 'position: fixed; bottom: 10px; right: 10px; padding: 5px 10px; border-radius: 15px; font-size: 11px; z-index: 9999; background: #6c757d; color: white; display: flex; align-items: center; gap: 5px;';
    statusIndicator.innerHTML = '<i class="fas fa-circle" style="font-size: 8px;"></i> Connecting...';
    document.body.appendChild(statusIndicator);

    // Listen for connection state changes
    if (window.realTime) {
        window.realTime.onConnectionChanged(function(state) {
            console.log('[Order History] Connection state changed:', state);
            if (state === 'connected') {
                statusIndicator.style.background = '#28a745';
                statusIndicator.innerHTML = '<i class="fas fa-circle" style="font-size: 8px;"></i> Live';
            } else if (state === 'reconnecting') {
                statusIndicator.style.background = '#ffc107';
                statusIndicator.innerHTML = '<i class="fas fa-circle" style="font-size: 8px;"></i> Reconnecting...';
            } else if (state === 'disconnected') {
                statusIndicator.style.background = '#dc3545';
                statusIndicator.innerHTML = '<i class="fas fa-circle" style="font-size: 8px;"></i> Offline';
            }
        });
    }
    
    document.addEventListener('rt:notification', function (e) {
        console.log('[Order History] Notification event received:', e.detail);
        var d = e.detail;
        var link = d.link || d.Link || "";
        var message = d.message || d.Message || "";
        var type = d.type || d.Type || "info";
        
        // If notification relates to orders, show toast and reload
        if (link && link.toLowerCase().includes('/order/')) {
            console.log("[Order History] Order notification detected, showing toast");
            
            // Show toast notification
            showToast(type, message);
            
            // Refresh order list after delay
            setTimeout(function () {
                console.log("[Order History] Reloading page...");
                location.reload();
            }, 1500);
        }
    });

    function showToast(type, message) {
        const toastHtml = `
            <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : type === 'error' ? 'danger' : 'info'} border-0" 
                 role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        `;
        
        const div = document.createElement('div');
        div.innerHTML = toastHtml;
        document.body.appendChild(div.firstElementChild);
        
        const toastEl = document.body.querySelector('.toast:last-child');
        const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
        toast.show();
        
        toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
    }
</script>
}
