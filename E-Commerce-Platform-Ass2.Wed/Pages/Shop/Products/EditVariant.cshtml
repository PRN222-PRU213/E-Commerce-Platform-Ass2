@page "{variantId:guid}"
@model E_Commerce_Platform_Ass2.Wed.Pages.Shop.Products.EditVariantModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Chỉnh sửa biến thể";
    Layout = "~/Pages/Shared/_ShopDashboardLayout.cshtml";
    var cloudName = Configuration["CloudinarySettings:CloudName"] ?? "";
    var uploadPreset = Configuration["CloudinarySettings:UploadPreset"] ?? "";
}

<!-- Page Header -->
<div class="container-fluid bg-secondary mb-4">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 180px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">
            <i class="fas fa-edit text-primary mr-2"></i>Chỉnh sửa biến thể
        </h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-page="/Shop/Products/Index" class="text-dark">Sản phẩm</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0"><a asp-page="/Shop/Products/Edit" asp-route-id="@Model.Input.ProductId" class="text-dark">@Model.Input.ProductName</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Chỉnh sửa biến thể</p>
        </div>
    </div>
</div>

<div class="container-fluid py-4">
    <div class="row px-xl-5">
        <div class="col-lg-10 offset-lg-1">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card border-0 mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Thông tin biến thể</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="form-group">
                            <label asp-for="Input.VariantName">Tên biến thể *</label>
                            <input asp-for="Input.VariantName" class="form-control" />
                            <span asp-validation-for="Input.VariantName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Price">Giá (₫) *</label>
                                    <input asp-for="Input.Price" class="form-control" type="number" step="1000" min="0" />
                                    <span asp-validation-for="Input.Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Stock">Tồn kho *</label>
                                    <input asp-for="Input.Stock" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="Input.Stock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Size">Kích thước</label>
                                    <input asp-for="Input.Size" class="form-control" />
                                    <span asp-validation-for="Input.Size" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Color">Màu sắc</label>
                                    <input asp-for="Input.Color" class="form-control" />
                                    <span asp-validation-for="Input.Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Sku">SKU</label>
                            <input asp-for="Input.Sku" class="form-control" />
                            <span asp-validation-for="Input.Sku" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ImageUrl">Link hình ảnh</label>
                            <input asp-for="Input.ImageUrl" class="form-control" type="url" />
                            <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Hoặc upload ảnh qua Cloudinary</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Shop/Products/Edit" asp-route-id="@Model.Input.ProductId" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-2"></i>Cập nhật biến thể
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
