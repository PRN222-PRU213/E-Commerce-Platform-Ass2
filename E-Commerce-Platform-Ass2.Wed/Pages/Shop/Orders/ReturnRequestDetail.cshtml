@page "{id:guid}"
@model E_Commerce_Platform_Ass2.Wed.Pages.Shop.Orders.ReturnRequestDetailModel
@using E_Commerce_Platform_Ass2.Service.DTOs
@{
    ViewData["Title"] = "Chi tiết yêu cầu đổi trả";
    Layout = "~/Pages/Shared/_ShopDashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row px-xl-5">
        <div class="col-lg-10 offset-lg-1">
            <!-- Alert messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }

            <!-- Request Info -->
            <div class="card border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin yêu cầu</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Mã yêu cầu:</strong> @Model.ReturnReq.Id</p>
                            <p><strong>Đơn hàng:</strong> @Model.ReturnReq.OrderId</p>
                            <p><strong>Khách hàng:</strong> @Model.ReturnReq.UserName</p>
                            <p><strong>Loại yêu cầu:</strong> @Model.ReturnReq.RequestType</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Trạng thái:</strong> 
                                <span class="badge @(Model.ReturnReq.Status == "Approved" ? "badge-success" : Model.ReturnReq.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                                    @Model.ReturnReq.Status
                                </span>
                            </p>
                            <p><strong>Số tiền yêu cầu:</strong> @Model.ReturnReq.RequestedAmount.ToString("N0") đ</p>
                            <p><strong>Ngày tạo:</strong> @Model.ReturnReq.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <p><strong>Lý do:</strong> @Model.ReturnReq.Reason</p>
                        @if (!string.IsNullOrEmpty(Model.ReturnReq.ReasonDetail))
                        {
                            <p><strong>Chi tiết:</strong> @Model.ReturnReq.ReasonDetail</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            @if (Model.ReturnReq.OrderItems.Any())
            {
                <div class="card border-0 mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Sản phẩm trong đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá</th>
                                        <th>Tổng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ReturnReq.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("N0") đ</td>
                                            <td>@((item.Price * item.Quantity).ToString("N0")) đ</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Evidence Images -->
            @if (Model.ReturnReq.EvidenceImageUrls.Any())
            {
                <div class="card border-0 mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Hình ảnh bằng chứng</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var img in Model.ReturnReq.EvidenceImageUrls)
                            {
                                <div class="col-md-3 mb-3">
                                    <img src="@img" alt="Evidence" class="img-fluid rounded" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Actions (Only if Pending) -->
            @if (Model.ReturnReq.Status == "Pending")
            {
                <div class="card border-0">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Xử lý yêu cầu</h5>
                    </div>
                    <div class="card-body">
                        <!-- Approve Form -->
                        <form method="post" asp-page-handler="ApproveReturn" asp-route-id="@Model.ReturnReq.Id" class="mb-4">
                            @Html.AntiForgeryToken()
                            <h6 class="text-success">Duyệt yêu cầu</h6>
                            <div class="form-group">
                                <label>Số tiền duyệt (VNĐ)</label>
                                <input type="number" asp-for="ApprovedAmount" class="form-control" 
                                       value="@Model.ReturnReq.RequestedAmount" min="0" step="1000" />
                                <small class="form-text text-muted">Mặc định: @Model.ReturnReq.RequestedAmount.ToString("N0") đ</small>
                            </div>
                            <div class="form-group">
                                <label>Phản hồi (tùy chọn)</label>
                                <textarea asp-for="Response" class="form-control" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check mr-2"></i>Duyệt và hoàn tiền
                            </button>
                        </form>

                        <hr />

                        <!-- Reject Form -->
                        <form method="post" asp-page-handler="RejectReturn" asp-route-id="@Model.ReturnReq.Id">
                            @Html.AntiForgeryToken()
                            <h6 class="text-danger">Từ chối yêu cầu</h6>
                            <div class="form-group">
                                <label>Lý do từ chối *</label>
                                <textarea asp-for="RejectReason" class="form-control" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-danger" 
                                    onclick="return confirm('Bạn có chắc muốn từ chối yêu cầu này?');">
                                <i class="fas fa-times mr-2"></i>Từ chối
                            </button>
                        </form>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a asp-page="./ReturnRequests" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
