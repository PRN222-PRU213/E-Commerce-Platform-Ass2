@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Shop.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Pages/Shared/_ShopDashboardLayout.cshtml";
    var statistics = Model.Statistics ?? new E_Commerce_Platform_Ass2.Service.Services.IServices.ShopOrderStatistics();
    var currentStatus = Model.Status;
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-4">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 150px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">
            <i class="fas fa-shopping-bag text-primary mr-2"></i>Quản lý đơn hàng
        </h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-page="/Shop/ViewShop" class="text-dark">Dashboard</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Đơn hàng</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3">
                <div class="card-body">
                    <h3 class="font-weight-bold text-primary mb-1">@statistics.TotalOrders</h3>
                    <small class="text-muted">Tổng đơn</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3 border-left-warning">
                <div class="card-body">
                    <h3 class="font-weight-bold text-warning mb-1">@statistics.PendingOrders</h3>
                    <small class="text-muted">Chờ xác nhận</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3">
                <div class="card-body">
                    <h3 class="font-weight-bold text-info mb-1">@statistics.ConfirmedOrders</h3>
                    <small class="text-muted">Đã xác nhận</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3">
                <div class="card-body">
                    <h3 class="font-weight-bold text-primary mb-1">@statistics.ShippingOrders</h3>
                    <small class="text-muted">Đang giao</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3">
                <div class="card-body">
                    <h3 class="font-weight-bold text-success mb-1">@statistics.DeliveredOrders</h3>
                    <small class="text-muted">Đã giao</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100 text-center py-3">
                <div class="card-body">
                    <h3 class="font-weight-bold text-success mb-1">@statistics.TotalRevenue.ToString("N0")₫</h3>
                    <small class="text-muted">Doanh thu</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Buttons -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
                <a asp-page="./Index" class="btn @(string.IsNullOrEmpty(currentStatus) ? "btn-primary" : "btn-outline-primary")">
                    <i class="fas fa-list"></i> Tất cả
                </a>
                <a asp-page="./Index" asp-route-status="Paid" class="btn @(currentStatus == "Paid" ? "bg-success-dark text-white" : "btn-outline-success")">
                    <i class="fas fa-check-double"></i> Đã thanh toán
                </a>
                <a asp-page="./Index" asp-route-status="Pending" class="btn @(currentStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">
                    <i class="fas fa-clock"></i> Chờ xử lý
                </a>
                <a asp-page="./Index" asp-route-status="Processing" class="btn @(currentStatus == "Processing" ? "btn-info" : "btn-outline-info")">
                    <i class="fas fa-cog"></i> Đang xử lý
                </a>
                <a asp-page="./Index" asp-route-status="Preparing" class="btn @(currentStatus == "Preparing" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fas fa-box-open"></i> Chuẩn bị hàng
                </a>
                <a asp-page="./Index" asp-route-status="Shipped" class="btn @(currentStatus == "Shipped" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fas fa-shipping-fast"></i> Vận chuyển
                </a>
                <a asp-page="./Index" asp-route-status="Completed" class="btn @(currentStatus == "Completed" ? "btn-success" : "btn-outline-success")">
                    <i class="fas fa-check-circle"></i> Hoàn thành
                </a>
                <a asp-page="./Index" asp-route-status="Cancelled" class="btn @(currentStatus == "Cancelled" ? "btn-danger" : "btn-outline-danger")">
                    <i class="fas fa-times-circle"></i> Đã hủy
                </a>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-list mr-2"></i>Danh sách đơn hàng (@Model.Orders.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Vận chuyển</th>
                                <th>Ngày đặt</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>
                                        <strong>#@order.Id.ToString().Substring(0, 8).ToUpper()</strong>
                                        <br><small class="text-muted">@order.ItemCount sản phẩm</small>
                                    </td>
                                    <td>
                                        <strong>@order.CustomerName</strong>
                                        <br><small class="text-muted">@order.CustomerEmail</small>
                                    </td>
                                    <td><strong class="text-primary">@order.TotalAmount.ToString("N0")₫</strong></td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case "Paid":
                                                <span class="badge badge-success-dark status-badge-fixed">Đã thanh toán</span>
                                                break;
                                            case "Pending":
                                                <span class="badge badge-warning status-badge-fixed">Chờ xử lý</span>
                                                break;
                                            case "Processing":
                                                <span class="badge badge-info status-badge-fixed">Đang xử lý</span>
                                                break;
                                            case "Preparing":
                                                <span class="badge badge-primary status-badge-fixed">Chuẩn bị hàng</span>
                                                break;
                                            case "Shipped":
                                                <span class="badge badge-primary status-badge-fixed">Vận chuyển</span>
                                                break;
                                            case "Completed":
                                                <span class="badge badge-success status-badge-fixed">Hoàn thành</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge badge-danger status-badge-fixed">Đã hủy</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@order.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(order.TrackingCode))
                                        {
                                            <small>
                                                <strong>@order.Carrier</strong><br>
                                                <code>@order.TrackingCode</code>
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Chưa có</small>
                                        }
                                    </td>
                                    <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        <a asp-page="/Shop/Orders/Detail" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có đơn hàng nào</h5>
                    <p class="text-muted">Đơn hàng sẽ xuất hiện ở đây khi khách hàng đặt hàng.</p>
                </div>
            }
        </div>
    </div>
</div>

