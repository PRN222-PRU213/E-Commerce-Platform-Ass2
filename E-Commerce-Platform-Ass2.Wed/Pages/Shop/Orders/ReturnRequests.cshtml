@page
@model E_Commerce_Platform_Ass2.Wed.Pages.Shop.Orders.ReturnRequestsModel
@using E_Commerce_Platform_Ass2.Service.DTOs
@{
    ViewData["Title"] = "Yêu cầu đổi trả";
    Layout = "~/Pages/Shared/_ShopDashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row px-xl-5">
        <div class="col-lg-12">
            <div class="card border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-undo mr-2"></i>Yêu cầu đổi trả
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Status Filter -->
                    <div class="mb-4">
                        <div class="btn-group" role="group">
                            <a asp-page="./ReturnRequests" asp-route-status="" 
                               class="btn @(string.IsNullOrEmpty(Model.Status) ? "btn-primary" : "btn-outline-primary")">
                                Tất cả
                            </a>
                            <a asp-page="./ReturnRequests" asp-route-status="Pending" 
                               class="btn @(Model.Status == "Pending" ? "btn-primary" : "btn-outline-primary")">
                                Chờ xử lý
                            </a>
                            <a asp-page="./ReturnRequests" asp-route-status="Approved" 
                               class="btn @(Model.Status == "Approved" ? "btn-primary" : "btn-outline-primary")">
                                Đã duyệt
                            </a>
                            <a asp-page="./ReturnRequests" asp-route-status="Rejected" 
                               class="btn @(Model.Status == "Rejected" ? "btn-primary" : "btn-outline-primary")">
                                Đã từ chối
                            </a>
                        </div>
                    </div>

                    @if (Model.Requests.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã yêu cầu</th>
                                        <th>Đơn hàng</th>
                                        <th>Khách hàng</th>
                                        <th>Loại</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Requests)
                                    {
                                        <tr>
                                            <td>@request.Id.ToString().Substring(0, 8)...</td>
                                            <td>@request.OrderId.ToString().Substring(0, 8)...</td>
                                            <td>@request.UserName</td>
                                            <td>@request.RequestType</td>
                                            <td>@request.RequestedAmount.ToString("N0") đ</td>
                                            <td>
                                                <span class="badge @(request.Status == "Approved" ? "badge-success" : request.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                                                    @request.Status
                                                </span>
                                            </td>
                                            <td>@request.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-page="./ReturnRequestDetail" asp-route-id="@request.Id" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có yêu cầu đổi trả nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
